generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Participant {
  fullName      String
  rollNumber    String     @unique
  mobileNumber  String     @unique
  username      String     @id
  bounty        Int?       @default(0)
  accountActive Boolean?   @default(true)
  Solution      Solution[]
}

model Project {
  repoId   String     @id
  webhook  String     @unique
  title    String
  solution Solution[]
  Issue    Issue[]
}

model Issue {
  issueId     String  @id
  repoId      String
  url         String
  claimedBy   String?
  issueStatus Boolean @default(true)

  project Project @relation(fields: [repoId], references: [repoId])
}

model Solution {
  id       String         @id
  repoId   String
  username String
  url      String

  participant Participant @relation(fields: [username], references: [username])
  project     Project     @relation(fields: [repoId], references: [repoId])
}

model BountyLog {
  id        Int       @id @default(autoincrement())
  givenBy   String
  amount    Int
  givenTo   String
  createdAt DateTime? @default(now())
}
