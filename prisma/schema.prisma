generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Participant {
  id           String     @id @default(cuid())
  fullName     String
  rollNumber   String     @unique
  mobileNumber String     @unique
  githubURL    String     @unique
  Bounty       Bounty[]
  Solution     Solution[]
}

model Maintainer {
  id                     String                   @id @default(cuid())
  fullName               String
  githubURL              String                   @unique
  MaintainersForProjects MaintainersForProjects[]
  Bounty                 Bounty[]
}

model MaintainersForProjects {
  maintainerId String
  projectId    String

  maintainer Maintainer @relation(fields: [maintainerId], references: [id])
  project    Project    @relation(fields: [projectId], references: [id])

  @@id([maintainerId, projectId])
}

model Project {
  id                     String                   @id @default(cuid())
  title                  String
  blurb                  String
  TagsForProjects        TagsForProjects[]
  MaintainersForProjects MaintainersForProjects[]
  Issue                  Issue[]
}

model Tag {
  id              Int               @id @default(autoincrement())
  tagName         String
  TagsForProjects TagsForProjects[]
}

model TagsForProjects {
  projectId String
  tagId     Int

  project Project @relation(fields: [projectId], references: [id])
  tag     Tag     @relation(fields: [tagId], references: [id])

  @@id([projectId, tagId])
}

model Issue {
  id          Int      @id @default(autoincrement())
  issueNumber Int
  projectId   String
  status      Boolean? @default(false)

  project  Project    @relation(fields: [projectId], references: [id])
  Bounty   Bounty[]
  Solution Solution[]

  @@unique([issueNumber, projectId])
}

model Bounty {
  id                Int    @id @default(autoincrement())
  maintainerGithub  String
  issueId           Int
  participantGitHub String
  points            Int

  maintainer  Maintainer  @relation(fields: [maintainerGithub], references: [githubURL])
  participant Participant @relation(fields: [participantGitHub], references: [githubURL])
  issue       Issue       @relation(fields: [issueId], references: [id])
}

model Solution {
  id                Int    @id @default(autoincrement())
  issueId           Int
  participantGitHub String

  issue       Issue       @relation(fields: [issueId], references: [id])
  participant Participant @relation(fields: [participantGitHub], references: [id])
}
